@using WebsiteBanHang.Models;
@model List<GIOHANG>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GioHang</h2>
<table>
    <tr>
        <td>Mã sách</td>
        <td>Tên sách</td>
        <td>Ảnh bìa</td>
        <td>Đơn giá</td>
        <td>Số lượng</td>
        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.maSach</td>
            <td>@item.tenSach</td>
            <td><a href="@Url.Action("Chitiet_Sach", "Sach", new {@ma_Sach = item.maSach})"><img src=@String.Concat("/Content/img/AnhBia/", item.anhBia) width="50" height="50" /></a></td>
            <td>@string.Format("{0:0,0}", item.giaBan) VNĐ</td>
            <td>@item.soLuong</td>
            <td>@string.Format("{0:0,0}", item.thanhTien) VNĐ</td>
        </tr>
    }
    <tr>
        <td colspan="6" style="text-align: right; color: blue">
            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
        </td>
    </tr>
    <tr>
        <td colspan="6" style="text-align: right; color: blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng" />
            }
        </td>
    </tr>
</table>

@*Css giỏ hàng*@
<style>
    #divGioHang {
        border: 1px solid #EEEEEE;
        margin-left: 10%;
    }

        #divGioHang td {
            padding: 10px;
            border: 1px solid #EEEEEE;
        }
</style>
