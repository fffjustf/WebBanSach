@model TAIKHOAN

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    string taikhoan = Request.Cookies["TaiKhoan"].Value;
}

<!-- start content -->
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("Change_Password", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <h2>ĐĂNG NHẬP</h2>
                    <hr class="colorgraph">



                    <div class="form-group">
                        @Html.HiddenFor(m => m.Username, htmlAttributes: new { @class = "form-control input-lg", @Value = taikhoan })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Mật khẩu cũ" })
                        @Html.ValidationMessageFor(m => m.Username, "", htmlAttributes: new { @class = "text-danger" })
                        @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.New_Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Mật khẩu mới" })
                        @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Repeat_Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Nhập lại mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6 col-xs-offset-6 col-md-offset-6">
                            <input type="submit" value="Đổi mật khẩu" class="btn btn-primary btn-block btn-lg" tabindex="7">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- end content -->
