@model TAIKHOAN

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<!-- start content -->
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <h2>ĐĂNG NHẬP</h2>
                    <hr class="colorgraph">

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Username, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Tài khoản" })
                        @Html.ValidationMessageFor(m => m.Username, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.url, htmlAttributes: new { @class = "form-control input-lg", @Value = ViewBag.Url })
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <span class="button-checkbox">
                                <button type="button" class="btn" data-color="info" tabindex="7">
                                    @Html.CheckBoxFor(m => m.Ghinho_Dangnhap, htmlAttributes: null) Ghi nhớ đăng nhập
                            </span>
                        </div>
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <input type="submit" value="Đăng nhập" class="btn btn-primary btn-block btn-lg" tabindex="7">
                        </div>
                        <div class="col-xs-12 col-md-6">Chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account", routeValues: new { @url = ViewBag.Url }, htmlAttributes: null)</div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- end content -->
